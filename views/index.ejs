<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="./styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="main-content">
  <h1 class="todo-header">Personal Tasks</h1>
<form action="/todos" method="post" class="todopost">
  <input type="text" name="title" placeholder="New Todo" style="color: white; border-radius: 20px;">
  <select name="priority">
    <option value="High">High</option>
    <option value="Medium">Medium</option>
    <option value="Low">Low</option>
  </select>
  <select name="assignee">
    <option value="John">John</option>
    <option value="Jane">Jane</option>
    <option value="Bob">Bob</option>
  </select>
  <input type="date" name="date">
  <button type="submit" class="post-button">Add Todo</button>
</form>
<% todos.forEach(todo => { %>
  <div class="card <%= todo.priority.toLowerCase() %> <%= todo.completed ? 'completed' : '' %>">
    <div class="todo-actions">
      <div class="todo-details">
        <form action="/todos/<%= todo.id %>/update" method="post" style="display: inline-block;">
          <input type="checkbox" name="completed" value="true" <%= todo.completed ? 'checked' : '' %> onchange="this.form.submit()">
        </form>
        <%= todo.title %> 
        <form action="/todos/<%= todo.id %>/priority" method="post" style="display: inline-block;">
          <select name="priority" onchange="this.form.submit()">
            <option value="High" <%= todo.priority === 'High' ? 'selected' : '' %>>High</option>
            <option value="Medium" <%= todo.priority === 'Medium' ? 'selected' : '' %>>Medium</option>
            <option value="Low" <%= todo.priority === 'Low' ? 'selected' : '' %>>Low</option>
          </select>
        </form>
        <span>Assigned to <%= todo.assignee %></span>
      </div>
      <div class="todo-right">
        <span><%= new Date(todo.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric'}) %></span>
        <div class="todo-icons">
          <form action="/todos/<%= todo.id %>/edit" method="get" style="display: inline-block;">
            <button type="submit" class="edit-button" style="border: none; background: none; padding: 0;"><i class="fas fa-pen" style="color: #fff;"></i></button>
          </form>
          <form action="/todos/<%= todo.id %>/delete" method="post" style="display: inline-block;">
            <button type="submit" class="delete-button"><i class="fas fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
<% }); %>

</div>
</body>
</html>


